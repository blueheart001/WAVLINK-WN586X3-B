/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>
#include "rk3328.dtsi"

/ {
    model = "FriendlyARM NanoPi NEO3";
    compatible = "friendlyarm,nanopi-neo3", "rockchip,rk3328";

    aliases {
        serial0 = &uart2;
        mmc0 = &sdmmc;
        ethernet0 = &gmac;
        led-boot = &led_sys;
        led-failsafe = &led_sys;
        led-running = &led_sys;
        led-upgrade = &led_sys;
    };

    chosen {
        stdout-path = "serial0:1500000n8";
    };

    leds {
        compatible = "gpio-leds";
        pinctrl-names = "default";
        pinctrl-0 = <&led_sys_pin>, <&led_lan_pin>;

        led_sys: led-0 {
            color = <LED_COLOR_ID_RED>;
            function = LED_FUNCTION_STATUS;
            gpios = <&gpio2 RK_PB7 GPIO_ACTIVE_HIGH>;
            linux,default-trigger = "heartbeat";
        };

        led_lan: led-1 {
            color = <LED_COLOR_ID_GREEN>;
            function = LED_FUNCTION_LAN;
            gpios = <&gpio2 RK_PC2 GPIO_ACTIVE_HIGH>;
            default-state = "on";
        };
    };

    keys {
        compatible = "gpio-keys";
        pinctrl-names = "default";
        pinctrl-0 = <&key_reset_pin>;

        key_reset: key-reset {
            label = "reset";
            linux,code = <KEY_RESTART>;
            gpios = <&gpio0 RK_PA0 GPIO_ACTIVE_LOW>;
            debounce-interval = <50>;
        };
    };

    vcc_sd: sdmmc-regulator {
        compatible = "regulator-fixed";
        regulator-name = "vcc_sd";
        regulator-min-microvolt = <3300000>;
        regulator-max-microvolt = <3300000>;
        gpio = <&gpio0 RK_PD6 GPIO_ACTIVE_LOW>;
        pinctrl-names = "default";
        pinctrl-0 = <&sdmmc0m1_pin>;
        regulator-boot-on;
        vin-supply = <&vcc_io>;
    };

    vccio_sd: sdmmcio-regulator {
        compatible = "regulator-gpio";
        regulator-name = "vccio_sd";
        regulator-min-microvolt = <1800000>;
        regulator-max-microvolt = <3300000>;
        regulator-always-on;
        regulator-boot-on;
        regulator-type = "voltage";
        gpios = <&gpio1 RK_PD4 GPIO_ACTIVE_HIGH>;
        states = <1800000 0x1>,
                 <3300000 0x0>;
        vin-supply = <&vcc_io>;
    };

    vcc_rtl8153: vcc-rtl8153-regulator {
        compatible = "regulator-fixed";
        regulator-name = "vcc_rtl8153";
        regulator-min-microvolt = <5000000>;
        regulator-max-microvolt = <5000000>;
        enable-active-high;
        gpio = <&gpio2 RK_PC6 GPIO_ACTIVE_HIGH>;
        pinctrl-names = "default";
        pinctrl-0 = <&vcc_rtl8153_pin>;
        vin-supply = <&vcc_sys>;
    };
};

&cpu0 {
    cpu-supply = <&vdd_arm>;
};

&cpu1 {
    cpu-supply = <&vdd_arm>;
};

&cpu2 {
    cpu-supply = <&vdd_arm>;
};

&cpu3 {
    cpu-supply = <&vdd_arm>;
};

&gmac {
    assigned-clocks = <&cru SCLK_MAC>, <&cru SCLK_MAC2IO_EXT>;
    clock_in_out = "input";
    phy-supply = <&vcc_io>;
    phy-mode = "rgmii";
    pinctrl-names = "default";
    pinctrl-0 = <&rgmiim1_pins>;
    rx_delay = <0x10>;
    tx_delay = <0x10>;
    status = "okay";

    mdio {
        #address-cells = <1>;
        #size-cells = <0>;

        ethphy: ethernet-phy@1 {
            compatible = "ethernet-phy-ieee802.3-c22";
            reg = <0x1>;
            pinctrl-names = "default";
            pinctrl-0 = <&phy_reset_pin>;
            reset-assert-us = <10000>;
            reset-deassert-us = <50000>;
            reset-gpios = <&gpio1 RK_PB7 GPIO_ACTIVE_LOW>;
        };
    };
};

&i2c0 {
    status = "okay";

    rk805: pmic@18 {
        compatible = "rockchip,rk805";
        reg = <0x18>;
        interrupt-parent = <&gpio1>;
        interrupts = <RK_PD0 IRQ_TYPE_LEVEL_LOW>;
        pinctrl-names = "default";
        pinctrl-0 = <&pmic_int_l_pin>;
        rockchip,system-power-controller;
        #clock-cells = <1>;
        clock-output-names = "xin32k", "rk805-clkout2";
        gpio-controller;
        #gpio-cells = <2>;
        wakeup-source;

        vcc1-supply = <&vcc_sys>;
        vcc2-supply = <&vcc_sys>;
        vcc3-supply = <&vcc_sys>;
        vcc4-supply = <&vcc_sys>;
        vcc5-supply = <&vcc_io>;
        vcc6-supply = <&vcc_sys>;

        regulators {
            vdd_log: DCDC_REG1 {
                regulator-name = "vdd_log";
                regulator-always-on;
                regulator-boot-on;
                regulator-min-microvolt = <712500>;
                regulator-max-microvolt = <1450000>;
                regulator-ramp-delay = <12500>;
            };

            vdd_arm: DCDC_REG2 {
                regulator-name = "vdd_arm";
                regulator-always-on;
                regulator-boot-on;
                regulator-min-microvolt = <712500>;
                regulator-max-microvolt = <1450000>;
                regulator-ramp-delay = <12500>;
            };

            vcc_ddr: DCDC_REG3 {
                regulator-name = "vcc_ddr";
                regulator-always-on;
                regulator-boot-on;
            };

            vcc_io: DCDC_REG4 {
                regulator-name = "vcc_io";
                regulator-always-on;
                regulator-boot-on;
                regulator-min-microvolt = <3300000>;
                regulator-max-microvolt = <3300000>;
            };

            vcc_18: LDO_REG1 {
                regulator-name = "vcc_18";
                regulator-always-on;
                regulator-boot-on;
                regulator-min-microvolt = <1800000>;
                regulator-max-microvolt = <1800000>;
            };

            vcc18_emmc: LDO_REG2 {
                regulator-name = "vcc18_emmc";
                regulator-always-on;
                regulator-boot-on;
                regulator-min-microvolt = <1800000>;
                regulator-max-microvolt = <1800000>;
            };

            vdd_10: LDO_REG3 {
                regulator-name = "vdd_10";
                regulator-always-on;
                regulator-boot-on;
                regulator-min-microvolt = <1000000>;
                regulator-max-microvolt = <1000000>;
            };
        };
    };
};

&io_domains {
    status = "okay";
    pmuio-supply = <&vcc_18>;
    vccio1-supply = <&vcc_io>;
    vccio2-supply = <&vcc_18>;
    vccio3-supply = <&vccio_sd>;
    vccio4-supply = <&vcc_18>;
    vccio5-supply = <&vcc_io>;
    vccio6-supply = <&vcc_io>;
};

&pinctrl {
    keys {
        key_reset_pin: key-reset-pin {
            rockchip,pins = <0 RK_PA0 RK_FUNC_GPIO &pcfg_pull_up>;
        };
    };

    leds {
        led_sys_pin: led-sys-pin {
            rockchip,pins = <2 RK_PB7 RK_FUNC_GPIO &pcfg_pull_none>;
        };
        led_lan_pin: led-lan-pin {
            rockchip,pins = <2 RK_PC2 RK_FUNC_GPIO &pcfg_pull_none>;
        };
    };

    pmic {
        pmic_int_l_pin: pmic-int-l-pin {
            rockchip,pins = <1 RK_PD0 RK_FUNC_GPIO &pcfg_pull_up>;
        };
    };

    sdcard {
        sdmmc0m1_pin: sdmmc0m1-pin {
            rockchip,pins = <0 RK_PD6 RK_FUNC_GPIO &pcfg_pull_none>;
        };
    };

    ethernet-phy {
        phy_reset_pin: phy-reset-pin {
            rockchip,pins = <1 RK_PB7 RK_FUNC_GPIO &pcfg_pull_none>;
        };
    };

    vcc-rtl8153 {
        vcc_rtl8153_pin: vcc-rtl8153-pin {
            rockchip,pins = <2 RK_PC6 RK_FUNC_GPIO &pcfg_pull_none>;
        };
    };
};

&sdmmc {
    bus-width = <4>;
    cap-mmc-highspeed;
    cap-sd-highspeed;
    disable-wp;
    pinctrl-names = "default";
    pinctrl-0 = <&sdmmc0_bus4 &sdmmc0_cmd &sdmmc0_det &sdmmc0_clk>;
    sd-uhs-sdr12;
    sd-uhs-sdr25;
    sd-uhs-sdr50;
    sd-uhs-sdr104;
    vmmc-supply = <&vcc_sd>;
    vqmmc-supply = <&vccio_sd>;
    status = "okay";
};

&tsadc {
    status = "okay";
    rockchip,hw-tshut-mode = <1>; // CRU mode (reset on overheat)
    rockchip,hw-tshut-polarity = <1>; // Active high
    rockchip,hw-tshut-temp = <95000>; // Shutdown at 95Â°C
};

&uart2 {
    status = "okay";
};

&usb_host0_ehci {
    status = "okay";
};

&usb_host0_ohci {
    status = "okay";
};

&usbdrd3_0 {
    status = "okay";
};

&usbdrd_dwc3_0 {
    status = "okay";
    dr_mode = "host";
};

&u2phy0 {
    status = "okay";
};

&u2phy0_host {
    phy-supply = <&vcc_rtl8153>;
    status = "okay";
};

&u2phy0_otg {
    status = "okay";
};
